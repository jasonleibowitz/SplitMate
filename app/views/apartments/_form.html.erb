<%= form_for @apartment do |f| %>

  <% if @apartment.errors.any? %>
    <p>Please correct the following errors:</p>
    <ul>
      <% @apartment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :apt %>
  <%= f.text_field :apt %>

  <%= f.label :zipcode %>
  <%= f.number_field :zipcode %>

  <%= f.label 'Apartment Image' %>
  <%= f.file_field :avatar %>

  <%= f.submit :submit %>

<% end %>
