<p> <%= flash[:error] %> </p>

<%= form_for([@apartment, @chore]) do |f| %>
<div class="row">
  <div class="small-6 columns">
    <% if @chore.errors.any? %>
      <p>Please correct the following errors:</p>
      <ul>
        <% @chore.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="small-6 columns">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
</div>

<div class="row">
  <div class="small-6 columns">
    <%= f.label :points_value %>
    <%= f.number_field :points_value %>

<div class="row">
  <div class="small-6 columns">
    <%= f.label :due_date %>
    <%= f.select :due_date, Date::DAYNAMES %>

<div class="row">
  <div class="small-6 columns">
    <%= f.submit :submit %>
  </div>
</div>

<% end %>
